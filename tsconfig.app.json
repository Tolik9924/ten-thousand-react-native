{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"target": "ES2020",

		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,

		"resolveJsonModule": true,
		"esModuleInterop": true,

		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"]
		}
	},
	"include": ["src"]
}
